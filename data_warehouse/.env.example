# === Core Configuration ===
PROJECT_ROOT=YOUR/ABSOLUTE/PATH/TO/data_warehouse
DATA_ECOSYSTEM_PATH=YOUR/ABSOLUTE/PATH/TO/bedrot-data-ecosystem
DATA_LAKE_PATH=YOUR/ABSOLUTE/PATH/TO/bedrot-data-ecosystem/data_lake
DASHBOARD_PATH=YOUR/ABSOLUTE/PATH/TO/bedrot-data-ecosystem/data_dashboard

# === Database Configuration ===
DATABASE_PATH=bedrot_analytics.db
DATABASE_BACKUP_PATH=backups
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# === Data Lake Integration ===
# Paths relative to DATA_LAKE_PATH
CURATED_ZONE=4_curated
STAGING_ZONE=3_staging
RAW_ZONE=2_raw
LANDING_ZONE=1_landing

# === ETL Configuration ===
ETL_BATCH_SIZE=1000
ETL_LOG_LEVEL=INFO
ETL_LOG_PATH=logs
ETL_ENABLE_VALIDATION=true
ETL_MAX_RETRIES=3

# === API Server Configuration ===
API_HOST=127.0.0.1
API_PORT=8001
API_RELOAD=true
API_DEBUG=true
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# === Performance Settings ===
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300
ENABLE_QUERY_PROFILING=false

# === Monitoring ===
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_SECONDS=60
ENABLE_METRICS=false
METRICS_PORT=9090