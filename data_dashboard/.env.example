# ⚠️  SECURITY WARNING ⚠️
# This file contains sensitive credentials. 
# DO NOT commit this file to version control!
# Copy this file to .env and update with your actual values.

# === Core Configuration ===
PROJECT_ROOT=YOUR/ABSOLUTE/PATH/TO/data_dashboard
DATA_ECOSYSTEM_PATH=YOUR/ABSOLUTE/PATH/TO/bedrot-data-ecosystem
DATA_LAKE_PATH=YOUR/ABSOLUTE/PATH/TO/bedrot-data-ecosystem/data_lake
WAREHOUSE_PATH=YOUR/ABSOLUTE/PATH/TO/bedrot-data-ecosystem/data_warehouse

# === Frontend Configuration (Next.js) ===
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8000/ws
NEXT_PUBLIC_REFRESH_INTERVAL=30000
NEXT_PUBLIC_ENABLE_DEBUG=false

# === Backend Configuration (FastAPI) ===
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
BACKEND_RELOAD=true
BACKEND_DEBUG=true
BACKEND_LOG_LEVEL=INFO

# === Database Connection ===
# Connect to data-warehouse SQLite database
DATABASE_PATH=../data_warehouse/bedrot_analytics.db
DATABASE_POOL_SIZE=5
DATABASE_POOL_TIMEOUT=30

# === Data Lake Integration ===
# Paths relative to DATA_LAKE_PATH for fallback CSV loading
CURATED_DATA_PATH=4_curated
STAGING_DATA_PATH=3_staging
ENABLE_CSV_FALLBACK=true

# === WebSocket Configuration ===
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100
WS_MESSAGE_QUEUE_SIZE=1000

# === Caching Configuration ===
ENABLE_CACHE=true
CACHE_TTL_SECONDS=300
CACHE_BACKEND=memory
REDIS_URL=redis://localhost:6379/0

# === CORS Configuration ===
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# === Authentication (Future) ===
ENABLE_AUTH=false
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# === Monitoring ===
ENABLE_METRICS=false
METRICS_PORT=9091
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces