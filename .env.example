# BEDROT Data Ecosystem Environment Configuration Example
# Copy this file to .env and update with your values

# Project Configuration
PROJECT_ROOT=/path/to/bedrot-data-ecosystem
PROJECT_NAME=bedrot-data-ecosystem
ENVIRONMENT=development

# Data Lake Configuration
DATA_LAKE_ROOT=${PROJECT_ROOT}/data_lake
LANDING_PATH=${DATA_LAKE_ROOT}/landing
RAW_PATH=${DATA_LAKE_ROOT}/raw
STAGING_PATH=${DATA_LAKE_ROOT}/staging
CURATED_PATH=${DATA_LAKE_ROOT}/curated
ARCHIVE_PATH=${DATA_LAKE_ROOT}/archive

# Database Configuration
DATABASE_PATH=${PROJECT_ROOT}/data-warehouse/bedrot_analytics.db
DATABASE_BACKUP_PATH=${PROJECT_ROOT}/data-warehouse/backups

# API Keys (DO NOT COMMIT ACTUAL VALUES)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
META_ACCESS_TOKEN=your_meta_access_token_here
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here

# Dashboard Configuration
DASHBOARD_BACKEND_URL=http://localhost:8000
DASHBOARD_FRONTEND_URL=http://localhost:3000
DASHBOARD_SECRET_KEY=your_secret_key_here

# File Monitoring
WATCH_INTERVAL=30
AUTO_REFRESH_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_PATH=${PROJECT_ROOT}/logs
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Performance Settings
MAX_WORKERS=4
CHUNK_SIZE=10000
CACHE_ENABLED=true
CACHE_TTL=3600

# MinIO Configuration (Optional)
MINIO_ENABLED=false
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=bedrot-data-lake

# Monitoring (Optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=false
GRAFANA_PORT=3001

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_DATA_VALIDATION=true
ENABLE_DEDUPLICATION=true
ENABLE_ARCHIVING=true

# Error Handling
RETRY_ATTEMPTS=3
RETRY_DELAY=5
ERROR_NOTIFICATION_EMAIL=admin@example.com

# Browser Automation
HEADLESS_BROWSER=false
BROWSER_TIMEOUT=60000
DOWNLOAD_TIMEOUT=300000

# Data Quality Thresholds
MIN_DATA_QUALITY_SCORE=80
MAX_DATA_STALENESS_HOURS=24
DUPLICATE_THRESHOLD_PERCENT=5

# Artist Configuration
PRIMARY_ARTIST=PIG1987
SECONDARY_ARTIST=ZONE_A0